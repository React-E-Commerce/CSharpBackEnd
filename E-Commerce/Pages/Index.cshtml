@page
@model E_Commerce.Pages.IndexModel
@{
    Layout = "_Layout";
}

<h1>"Hello from Razor Pages"</h1>
<p>Model type is @Model.GetType().FullName</p>
<a asp-page="MyAccount">My Account Page</a>

<h3>Product List</h3>
<table border="1">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Price</th>
        <th>Summary</th>
        <th>Condition</th>
        <th>Genre</th>
        <th>Action</th>
    </tr>
    @foreach (var product in Model.Products)
    {
        <tr align="center">
            <td>@product.Id</td>
            <td>@product.Name</td>
            <td>$@product.Price</td>
            <td>@product.Summary</td>
            <td>@product.Condition</td>
            <td>@product.ProductCategory</td>
            <td>
                <a asp-page="cart" asp-page-handler="buynow" asp-route-id="@product.Id">Add to Cart</a>
            </td>
        </tr>
    }
</table>
